{
  "$schema": "https://biomejs.dev/schemas/2.2.0/schema.json",
  "vcs": {
    "enabled": false,
    "clientKind": "git",
    "useIgnoreFile": false
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineEnding": "lf",
    "lineWidth": 100,
    "bracketSpacing": true,
    "bracketSameLine": false,
    "formatWithErrors": true,
    "useEditorconfig": true
  },

  "linter": {
    "enabled": true,
    "rules": {
      "a11y": "error",
      "complexity": "warn",
      "correctness": "error",
      "nursery": "off",
      "performance": "warn",
      "security": "error",
      "style": "warn",
      "suspicious": "warn"
    }
  },
  "files": {
    "includes": ["**/*.js", "**/*.ts", "**/*.tsx", "**/*.jsx", "**/*.vue", "**/*.css", "**/*.scss"],
    "ignoreUnknown": true
  },
  "plugins": [],
  "assist": {
    "enabled": true,
    "actions": {
      "source": {
        "organizeImports": "on",
        "useSortedAttributes": "on",
        "useSortedKeys": "on",
        "useSortedProperties": "on"
      }
    }
  }
}
